<h1>Movie</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ document.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ document.name }}</td>
        </tr>
        <tr>
            <th>Synopsis</th>
            <td>{{ document.synopsis }}</td>
        </tr>
        <tr>
            <th>Duration</th>
            <td>{{ document.duration }}</td>
        </tr>
        <tr>
            <th>Releasedate</th>
            <td>{{ document.releasedate }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('movie') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('movie_edit', { 'id': document.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('movie_delete', { 'id': document.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
